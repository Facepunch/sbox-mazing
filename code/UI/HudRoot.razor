@using Sandbox.UI

@namespace Mazing.UI
@inherits Sandbox.UI.RootPanel

@attribute [StyleSheet( "/UI/HudRoot.scss" )]

<root>
    <div class="overlay"></div>
    <text @ref="EditorWarning" class="editor-warning" text="EDITOR MODE: SCORES NOT SUBMITTED"></text>
    <text @ref="DailyChallengeInfo" class="daily-info"></text>
    <!--<ChatBox></ChatBox>-->
    <div class="times">
        <text @ref="LevelTime" class="level-time"></text>
        <text text="/"></text>
        <text @ref="TotalTime" class="total-time"></text>
    </div>
    <div class="scores">
        <div class="score left">
            <div class="total-coins">
                <div class="icon"></div><text @ref="TotalCoinsText" text="$0"></text><text @ref="TotalCoinsDiffText" class="diff"></text>
            </div>
        </div>
        <div class="score middle">
            <div class="multiplier" @ref="StreakBonusParent">
                <text class="icon" @ref="StreakBonusLabel" text="Streak Bonus"></text><text @ref="StreakBonusText"></text>
            </div>
        </div>
        <div class="score right">
            <div class="level-num">
                <text @ref="LevelNumberText"></text>
            </div>
        </div>
    </div>
</root>